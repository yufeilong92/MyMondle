<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lawyee.mycelue.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.lawyee.mycelue.RoundLoadingBar
            android:id="@+id/rd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:bigcircle_radius="70dp"
            app:frame_alpha="0.3"
            app:frame_angle="10dp"
            app:frame_color="@android:color/holo_blue_bright"
            app:smallcircle_alpha="0.6"
            app:smallcircle_color="@color/colorAccent"
            app:smallcircle_radius="50dp" />
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="204dp"
            android:src="@mipmap/a" />
    </RelativeLayout>


</LinearLayout>
